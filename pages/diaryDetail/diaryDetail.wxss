/* pages/diaryDetail/diaryDetail.wxss */
/* 梦想录详情页 */

/* 头部 */
/* 梦想录信息 */
.head {
  background-color: #fff;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #E5E5E5;
}
.head .info {
  position: relative;
  overflow: hidden;
  padding-left: 240rpx;
  height: 200rpx;
}
.head .info .cover {
  position: absolute;
  left: 0;
  width: 200rpx;
  height: 200rpx;
  border-radius: 10%;
}
.head .info .title {
  font-size: 36rpx;
  line-height: 60rpx;
}
.head .info .btn-follow {
  position: absolute;
  right: 0;
  top: 0;
}
.head .info .desc {
  position: absolute;
  bottom: 0;
  font-size: 28rpx;
}
/* 元信息 */
.head .meta {
  margin-top: 30rpx;
  overflow: hidden;
}
.head .meta text {
  font-size: 24rpx;
}
.head .meta .text-left {
  float: left;
  color: #333;
}
.head .meta .text-right {
  float: right;
  color: #ccc;
}