<!-- 发布轨迹页 -->
<view class="app-container container-pub">

  <!-- 表单 -->
  <form class="form-publish">
    <!-- 选择梦想录 -->
    <view class="c-form-item">
      <view class="text-label">选择梦想录</view>
      <view class="form-el">
        <picker class="select-item last" bindchange="onChangeDiaryPicker" range="{{collectionList}}" value="{{curCollectionIndex}}">
          <image class="cover" src="{{collectionCoverList[curCollectionIndex]}}"></image>
          <text class="text">{{collectionList[curCollectionIndex]}}</text>
          <text class="fa fa-angle-right icon-angle"></text>
        </picker>
      </view>
    </view>

    <!-- 图片 -->
    <view class="c-form-item">
      <view class="text-label">上传图片</view>
      <view class="form-el">
        <view class="pic-sets">
            <view wx:if="{{uploadImg.length > 0}}" wx:for="{{uploadImg}}" data-itemindex="{{index}}" bindtap="onClickImg" class="item">
              <image class="img" src="{{item}}"></image>
            </view>
            <view wx:if="{{uploadImg.length != 3}}" bindtap="onClickAddImg" class="c-addnew"></view>
            <view wx:if="{{uploadImg.length == 1}}" class="c-blank"></view>
        </view>
      </view>
    </view>

    <!-- 正文 -->
    <view class="c-form-item">
      <view class="text-label">正文</view>
      <view class="form-el">
        <textarea class="textarea" placeholder="输入正文..." />
      </view>
    </view>

    <!-- 提交按钮 -->
    <button class="c-btn-submit" form-type="submit" type="primary">发布</button>
  </form>

</view>
