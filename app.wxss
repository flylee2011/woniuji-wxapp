/**app.wxss**/
@import "fonts.wxss";
@import "animate.wxss";

page {
  height: 100%;
}

/* 容器 */
.app-container {
  background-color: #efeff4;
  min-height: 100%;
  overflow: hidden;
}

/* 空白模块 */
.c-blank {
  width: 204rpx;
  height: 204rpx;
  background-color: #fff;
  text-align: center;
}
/* 新增icon */
.c-addnew {
  width: 204rpx;
  height: 204rpx;
  background-repeat: no-repeat;
  background-size: cover;
  background-image: url('data:image/png;base64,');
}

/* tab 切换部分 */
.c-tab {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 32rpx;
  background-color: #fff;
}
.c-tab .item {
  padding: 20rpx;
  border-bottom: 4rpx solid #ccc;
}
.c-tab .active {
  color: #09bb07;
  border-bottom-color: #09bb07;
}

/* 梦想录列表 */
.diary-sets {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  flex-wrap: wrap;
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx 20rpx 30rpx;
}
.diary-sets .item {
  margin-top: 20rpx;
}
.diary-sets .cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10%;
}
.diary-sets .title {
  font-size: 28rpx;
  text-align: center;
}
.diary-sets .desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  text-align: center;
  color: #ccc;
}

/* 轨迹列表 */
.diary-list .item {
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
}
.diary-list .title {
  overflow: hidden;
}
.diary-list .title .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.diary-list .title .nickname {
  margin-left: 10rpx;
  vertical-align: middle;
  font-size: 28rpx;
}
.diary-list .title .time {
  float: right;
  margin-top: 18rpx;
  font-size: 24rpx;
  vertical-align: middle;
}
.diary-list .pic {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.diary-list .pic .img-multi {
  margin-top: 20rpx;
  width: 200rpx;
  height: 200rpx;
}
.diary-list .content {
  margin-top: 20rpx;
  font-size: 32rpx;
}
.diary-list .meta {
  margin-top: 20rpx;
  overflow: hidden;
}
.diary-list .meta .text-from {
  float: left;
  margin-top: 4rpx;
  font-size: 28rpx;
}
.diary-list .meta .icon {
  float: right;
  margin-left: 20rpx;
}

/* 表单/选项列表类 */
/* 标签文字 */
.c-form-item .text-label {
  margin: 30rpx 30rpx 20rpx 30rpx;
  font-size: 28rpx;
  color: #888888;
}
/* 表单元素 */
.c-form-item .form-el {
  border-top: 1px solid #E5E5E5;
  border-bottom: 1px solid #E5E5E5;
  background-color: #fff;
}
/* 选择列表 */
.c-form-item .select-item {
  position: relative;
  padding: 20rpx 30rpx 20rpx 0;
  margin-left: 30rpx;
  border-bottom: 1px solid #E5E5E5;
}
.c-form-item .select-item.last {
  border-bottom: 0;
}
.c-form-item .select-item .cover {
  margin-right: 10rpx;
  width: 58rpx;
  height: 58rpx;
  vertical-align: middle;
}
.c-form-item .select-item .text {
  margin-right: 40rpx;
  font-size: 34rpx;
  vertical-align: middle;
}
.c-form-item .select-item .icon-angle {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  color: #C7C7CC;
}
.c-form-item .select-item .icon-angle.no-cover {
  top: 22rpx;
}
.c-form-item .select-item input,
.c-form-item .select-item picker,
.c-form-item .select-item textarea {
  display: inline-block;
  vertical-align: middle;
  font-size: 34rpx;
}
/* 预设文案 */
.c-form-item .form-placeholder {
  color: #B2B2B2;
}
/* 上传图片列表 */
.c-form-item .pic-sets {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding: 30rpx;
  background-color: #fff;
}
.c-form-item .pic-sets .item {
  width: 204rpx;
  height: 204rpx;
}
.c-form-item .pic-sets .img {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #CCCCCC;
}
/* 正文区域 */
.c-form-item .textarea {
  box-sizing: border-box;
  background-color: #fff;
  padding: 20rpx 30rpx;
  width: 100%;
  font-size: 32rpx;
}
/* 提交按钮 */
.c-btn-submit {
  margin: 60rpx 40rpx 20rpx 40rpx;
}
